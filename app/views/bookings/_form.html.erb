<div class="form-container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1>New Booking</h1>
        <%= simple_form_for(@booking) do |f| %>
        <%= f.input :start_time %>
        <%= f.input :end_time %>
        <%= f.input :spots_required, input_html: { min: '1', max: '25' }%>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :status, value: "Not confirmed" %>
        <%= f.submit "Book", class: "btn btn-primary" %>
        <%= f.button :button do %>
          <button type="button" class="btn btn-danger"><%= link_to "Back to the activity", activity_path(@activity) %></button>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
